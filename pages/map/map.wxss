
.page-section-gap{
  box-sizing: border-box;
  padding: 0;
}

.map {
  width: 750px;
  height: 100vh;
}

.footer {
  display:flex;
  justify-content: space-around;
  position: absolute;
  width: 95%;
  height: 50px;
  left: 10px;  
  bottom: 5px;
  background-color: #fcfcfc;
  border-radius: 15px;
}

.search-icon {
  width: 30px;
  height: 30px;
  margin: auto 0;
}

.input {
  background-color: white;
  width: 80%;
  height: 100%;
}

.add-icon {
  width: 30px;
  height: 30px;
  margin: auto 0;
}

.cancel-icon {
  position: absolute;
  height: 30px;
  width: 30px;
  border-radius: 50%;
  z-index: 2;
  top: 5px;
  right: 5px;
}

.text {
  position: absolute;
  z-index: 2;
  font-weight: bold;
  width: 100%;
  text-align: center;
  top : 15px;
  color: red;
  opacity: 0.8;
}