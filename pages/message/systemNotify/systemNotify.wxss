/* pages/group/systemNotify/systemNotify.wxss */

page {
  background-color: rgb(238,242,243);
}

.head {
  position: relative;
  height: 10%;
  text-align: center;
  padding: 20rpx;
  background-color: rgb(219, 219, 218);
  font-size: 30rpx;
}

.no-info {
  width: 100%;
  height: 100px;
  text-align: center;
  margin-top: 100px;
  font-size: 35px;
}

.notification-list {
  width: 100%;
  height: 100vh;
  background-color: rgb(238,242,243);
  display: flex;
  flex-direction: column;
  align-items: center;
  /* overflow: hidden; */
}

.notification-list .notification-container {
  margin-top: 20px;
  background-color:rgb(254,254,254);
  width: 88%;
  height: 120px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 20px;
  box-shadow: 2px 2px 1px rgb(165, 229, 255);
}

.notification-list .notification-container .line {
  height: 1px;
  border-radius: 35rpx;
  width: 100%;
  background-color: grey;
  opacity: 0.5;
}

.notification-list .notification-container .content {
  margin-left: 15px;
  margin-right: 10px;
  padding-bottom: 5px;
}

.notification-list .notification-container .content :first-child {
  font-weight: bolder;
}

.notification-list .notification-container .marker-link {
  margin-left: 15px;
  margin-top: 5px;
  font-size: small;
  display: flex;
  justify-content: space-between;
}

.arrow-right{
  margin-top: 5px;
  margin-right: 15px;
  width: 8px;
  height: 8px;
  border-top: 1px solid grey;
  border-right: 1px solid grey;
  transform: rotate(45deg);
  transition: all 0.3s;
}