/* group/group.wxss */
page {
  background-color: rgb(240,241,243);
}

.table {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 120px;
  background-color: white;
}

.table .item {
  position: relative;
}

.table .item .icon {
  display: block;
  margin: auto;
  width: 100rpx;
  height: 100rpx;
}

.table .item  .sup {
  position: absolute;
  width: 45rpx;
  height: 45rpx;
  text-align: center;
  font-weight: lighter;
  top: -10px;
  left: 50px;
  padding: 2px;
  background-color: red;
  color:white;
  border-radius: 60%;
}