
page {
  background-color: rgb(238,242,243);
}

.body {
  width: 100%;
  height: 100vh;
  background-color: rgb(238,242,243);
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.body .item {
  width: 80%;
  height: 120px;
  margin-top: 30px;
  background-color: white;
  border-radius: 20px;
  box-shadow: 2px 2px 1px rgb(165, 229, 255);
  display: flex;
}
.body .item .left {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.body .item .left image{
  height: 100px;
  width: 100px;
}

.body .item .right {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.body .item .right .header :first-child{
  font-weight: bolder;
}

.body .item .right .footer {
  margin-top: 10px;
  display: flex;
}

.body .item .right .footer .data {
  display: flex;
  align-items: center;
}

.body .item .right .footer .data image {
  margin-right: 5px;
  margin-left: 5px;
  height: 25px;
  width: 25px;
}